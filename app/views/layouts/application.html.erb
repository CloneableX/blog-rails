<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="bg-light">
  <header class="blog-header py-2">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-2 text-left mx-3">
        <%= link_to "Cloneable's Blog", blog_path, class: 'blog-header-logo text-light' %>
      </div>
      <div class="col-8">
        <% if session[:user_id] %>
          <nav class="nav mr-auto">
            <%= link_to 'Articles', articles_path, class: 'nav-link' %>
            <%= link_to 'Catalogs', catalogs_path, class: 'nav-link' %>
          </nav>
        <% end %>
      </div>
      <div class="col-2">
        <% if session[:user_id] %>
          <%= link_to 'Sign out', logout_path, method: :delete, class: 'btn btn-info' %>
        <% else %>
          <%= link_to 'Sign in', login_path, class: 'btn btn-info' %>
        <% end %>
      </div>
    </div>
  </header>
  <div class="container">
    <div class="py-1">
      <%= yield %>
    </div>
  </div>
</body>
</html>
