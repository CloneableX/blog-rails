<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="bg-light">
  <div class="container">
    <header class="blog-header py-3">
      <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-2"></div>
        <div class="col-8 text-center">
          <%= link_to "Cloneable's Blog", blog_path, class: 'blog-header-logo text-light' %>
        </div>
        <div class="col-2">
          <% if session[:user_id] %>
            <%= link_to 'Sign out', logout_path, method: :delete, class: 'btn btn-info' %>
          <% else %>
            <%= link_to 'Sign in', login_path, class: 'btn btn-info' %>
          <% end %>
        </div>
      </div>
    </header>
    <div class="py-1">
      <%= yield %>
    </div>
  </div>
</body>
</html>
