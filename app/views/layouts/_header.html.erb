<header class="blog-header py-2">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-2 text-left">
      <%= link_to "Cloneable's Blog", root_path, class: 'blog-header-logo text-light' %>
    </div>
    <div class="col-6">
      <% if session[:user_id] %>
        <nav class="nav mr-auto">
          <%= link_to 'Catalogs', catalogs_path, class: 'nav-link' %>
        </nav>
      <% end %>
    </div>
    <div class="col-3">
      <%= form_tag(search_articles_path, { class: 'form-inline' }) do %>
        <%= text_field_tag :title, nil, class: 'form-control mr-sm-2', placeholder: 'Search' %>
        <%= submit_tag 'Search', class: 'btn btn-outline-info' %>
      <% end %>
    </div>
    <div class="col-1">
      <% if session[:user_id] %>
        <%= link_to 'Sign out', logout_path, method: :delete, class: 'btn btn-info' %>
      <% else %>
        <%= link_to 'Sign in', login_path, class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>
</header>
