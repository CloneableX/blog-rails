<div class="col">
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= article.title %></h5>
      <div class="card-text text-muted"><%= markdown_to_html(article.description) %></div>
      <%= link_to 'Continue reading', article, target: '_blank', class: 'card-link' %>
      <% if defined?(maintainable) && maintainable %>
        <%= link_to 'Edit', edit_article_path(article), class: 'card-link' %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-link' %>
      <% end %>
    </div>
  </div>
</div>
