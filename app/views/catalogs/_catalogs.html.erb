<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to 'All', articles_path %>
    <span class="badge badge-primary badge-pill"><%= Catalog.sum(:articles_num) %></span>
  </li>
  <% Catalog.all.each do |catalog| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to catalog.title, catalog_articles_path(catalog.id) %>
      <span class="badge badge-primary badge-pill"><%= catalog.articles_num %></span>
    </li>
  <% end %>
</ul>